<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DetailFragment">

    <FrameLayout
        android:id="@+id/frameLayoutBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="1"/>

    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:elevation="10dp"
        android:src="@drawable/ic_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="22dp"
        android:elevation="10dp"
        android:src="@drawable/ic_share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-16dp"
        android:layout_marginEnd="22dp"
        android:elevation="10dp"
        android:src="@drawable/ic_heart"
        app:layout_constraintEnd_toEndOf="@+id/cardViewDetail"
        app:layout_constraintTop_toBottomOf="@+id/cardViewDetail" />

    <!-- CARD VIEW IMAGES -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDetail"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_broken_image" />

    </androidx.cardview.widget.CardView>

    <!-- CONTAINER DETAILS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-25dp"
        android:background="@drawable/ic_box_top_radius_white"
        android:elevation="2dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayoutBackground"
        app:layout_constraintTop_toBottomOf="@+id/cardViewDetail">

        <!-- NOME DA LOJA -->
        <TextView
            android:id="@+id/textViewShopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="80dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="Nome da loja"/>

        <!-- DESCRIÇÃO -->
        <TextView
            android:id="@+id/textViewShopDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="80dp"
            android:textColor="@color/gray_500"
            android:textSize="15sp"
            android:text="Descrição do produto, detalhes, nome e observações"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <!-- TITLE LINGERIE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginEnd="5dp"
                android:text="Sutiã ideal:"/>

            <TextView
                android:id="@+id/textViewBraMatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/pink_700"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Tipo de sutiã"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <!-- PRICE -->
            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="22sp"
                android:text="R$ 0.00"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pink_700"
                android:textAllCaps="true"
                android:text="Ir para loja"/>

        </LinearLayout>

        <!-- TIP -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="80dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Sutiãs recomendados"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



